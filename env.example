# QA Pipeline Environment Configuration
# Copy this file to .env and configure the values below

# =============================================================================
# LLM API CONFIGURATION (Required for LLM features)
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=1000

# Enable/Disable LLM Validation
ENABLE_LLM_VALIDATION=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=sqlite:///./data/indexing_qa.db

# =============================================================================
# QUALITY THRESHOLDS
# =============================================================================

# Overall quality score threshold for approval (0-100)
APPROVAL_QUALITY_SCORE_THRESHOLD=80.0

# Rules engine pass rate threshold (0-100)
QUALITY_PASS_RATE_THRESHOLD=95.0

# LLM confidence thresholds
LLM_CONFIDENCE_THRESHOLD=0.8
LLM_FALLBACK_CONFIDENCE_LOW=0.3
LLM_FALLBACK_CONFIDENCE_HIGH=0.9

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# LLM rate limiting
LLM_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# AZURE CONFIGURATION (Optional)
# =============================================================================

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_REPORTS=reports
AZURE_STORAGE_CONTAINER_DEAD_LETTERS=dead-letters

# Azure Key Vault (Optional)
AZURE_KEY_VAULT_URL=your-key-vault-url
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# =============================================================================
# MONITORING & OBSERVABILITY (Optional)
# =============================================================================

# Enable monitoring
ENABLE_MONITORING=true

# Prometheus metrics
ENABLE_PROMETHEUS_METRICS=true

# Application Insights (Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom rules engine weights (JSON format)
CUSTOM_RULE_WEIGHTS={"empty_tags": 1.0, "tag_count_validation": 1.0, "text_quality": 1.5}

# Email alert configuration
ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_RECIPIENTS=admin@yourcompany.com,qa-team@yourcompany.com

# Slack webhook for alerts (Optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url

# =============================================================================
# DOCKER-SPECIFIC CONFIGURATION
# =============================================================================

# Backend URL for frontend (automatically set in docker-compose)
BACKEND_URL=http://backend:8000

# Node environment
NODE_ENV=production

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1 